<div class="panel panel-default">
  <div class="list-group"> 
  {% for filter_group in filter_groups %} 
    <a class="list-group-item text-lightblack">
      <strong class="text-uppercase">{{ filter_group.name }}</strong>
    </a>

    <div class="list-group-item">
      <div id="filter-group{{ filter_group.filter_group_id }}">
        {% for filter in filter_group.filter %}
          <div class="checkbox">
              {% if filter.filter_id in filter_category %}
                <div class="form-check">
                  <input class="form-check-input" name="filter[]" type="checkbox" value="{{ filter.filter_id }}" id="filter{{filter.filter_id}}" checked="checked">
                  <label class="form-check-label" for="filter{{filter.filter_id}}">
                    {{ filter.name }}
                  </label>
                </div>
              {% else %}
                <div class="form-check">
                  <input class="form-check-input" name="filter[]" type="checkbox" value="{{ filter.filter_id }}" id="filter{{filter.filter_id}}">
                  <label class="form-check-label" for="filter{{filter.filter_id}}">
                    {{ filter.name }}
                  </label>
                </div>
              {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

  {% endfor %}

</div>

<div class="panel-footer text-right">
  <button type="button" id="button-filter" class="btn btn-primary">{{ button_filter }}</button>
</div>

</div>

<script type="text/javascript"><!--
  $('#button-filter').on('click', function() {
    filter = [];

    $('input[name^=\'filter\']:checked').each(function(element) {
      filter.push(this.value);
    });

    if (filter != 0) {
        location = '{{ action }}&filter=' + filter.join(',');
    } else if (filter = []) {
        location = '{{ action }}';
    }
  });
//--></script> 
